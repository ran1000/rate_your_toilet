  <% if locals[:pictures][0] == nil %>
    <div class="d-block w-100 no-carousel">
      <div class="no-image-tag">
        <img src="https://images.unsplash.com/photo-1584475784921-d9dbfd9d17ca?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80" alt="">
        <%# <p>No images uploaded yet, be the first! ;)</p> %>
      </div>
    </div>
  <% end %>


<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">

  <div class="carousel-inner">
  <% locals[:pictures].each_with_index do |picture, index| %>
    <% if index == 0 %>
        <div class="carousel-item active">
          <%= cl_image_tag picture.key, class: "d-block w-100", height: 300 %>
        </div>
    <% else %>
        <div class="carousel-item">
          <%= cl_image_tag picture.key, class: "d-block w-100", height: 300 %>
        </div>
    <% end %>
  <% end %>
  </div>

  <% if locals[:pictures][1] != nil %>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
  <% end %>

</div>
