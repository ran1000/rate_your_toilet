<h1>Toilets - SHOWPAGE</h1>

<p> <%= @toilet.name %>  </p>

<% if @toilet.favorite?(current_user) %>
  <%= button_to "Favorite", favorite_path(@toilet), method: "put", disabled: true %>
<% else %>
  <%= button_to "Favorite", favorite_path(@toilet), method: "put" %>
<% end %>

<em><%= render "/reviews/index", reviews: @toilet.reviews %></em>

<%= link_to "Delete Toilet", delete_toilet_path(@toilet), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger m-3" %>
